<h3 class='signing-title'>Edit form</h3>

<%= form_for [@department, @course] do |f| %>
<div class="signing-wrapper">
	Title: <div class="field"><%= f.text_field :title %></div>
	Content: <div class="field cktext-form"> <%= f.cktext_area :content, rows: 10 %></div>
	Description: <div class='field'><%= f.text_field :description %></div>
	<%= f.submit "Update", :class => "submit-button" %>
</div>
<% end %>

<div class='delete-form'>
	<%= link_to "Delete Course of #{@course.title}", department_course_path(@department), method: :delete, data: {confirm: "Are you sure you want to delete this course?"}, :class => 'submit-button'  %>
</div>