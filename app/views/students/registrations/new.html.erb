<div class='signing-wrapper'>
<h2 class='signing-title'>Sign up as Student</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :fname, autofocus: true, autocomplete: "fname", placeholder: 'First name' %>
  </div>

  <div class="field">
    <%= f.text_field :lname, autofocus: true, autocomplete: "lname", placeholder: "Last name"  %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%#= f.label :password %>
    <% if @minimum_password_length %>
    
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password ' "(#{@minimum_password_length} characters minimum)" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "Confirm password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'submit-button' %>
  </div>
<% end %>

<div class='field'> &#8212 <span> OR </span> &#8212 </div>

    <div class='submit-button-link'><%= render "students/shared/links" %></div>
</div>